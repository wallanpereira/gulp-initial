{
	"src": {
		"views": {
			"files": [
				"./src/*.html",
				"./src/components/**/*.html"
			],
			"components": [
				"./src/components/**/*.html"
			],
			"pages": [
				"./src/*.html"
			]
		},
		"css": {
            "files": [
				"./src/scss/default.scss",
                "./src/components/**/*.scss"
            ],
            "all": [
                "./src/scss/default.scss",
                "./src/scss/**/*.scss",
                "./src/components/**/*.scss"
            ],
            "imports": "./src/scss"
        },
		"js": {
            "dependencies": [
                "./node_modules/jquery/dist/jquery.min.js"
            ],
            "files": [
                "./src/js/*.js",
                "./src/js/**/*.js",
                "./src/components/**/*.js"
            ]
        },
		"img": "./src/img/**/*",
  		"fonts": ["./src/fonts/**/*"]
	},
	"dest": {
		"views": "./dist",
		"css": "./dist/css",
		"js": "./dist/js",
		"img": "./dist/img",
    	"fonts": "./dist/fonts"
	}
}
